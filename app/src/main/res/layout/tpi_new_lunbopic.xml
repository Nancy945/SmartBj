<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#22000000">

        <com.example.nancy.smartbj.view.InterceptScrollViewPager
            android:id="@+id/vp_tpi_news_lunbo_pic"
            android:layout_width="match_parent"
            android:layout_height="175dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#44000000">

            <TextView
                android:id="@+id/tv_tpi_news_pic_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="one night in 北京" />

            <!--用来放轮播点的容器-->
            <LinearLayout
                android:id="@+id/ll_tpi_news_pic_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingRight="8dp" />
        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:background="#44770000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

